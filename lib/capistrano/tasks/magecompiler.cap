namespace :magecompiler do

    desc "Run the Magento compiler"
    task :run do
        on roles(:app) do |host|
            within release_path do
                execute "php -f #{current_path}/htdocs/shell/compiler.php -- compile"
            end
        end
    end

    desc "Enable the Magento compiler"
    task :enable do
        on roles(:app) do |host|
            within release_path do
                execute "php -f #{current_path}/htdocs/shell/compiler.php -- enable"
            end
        end
    end

    desc "Disable the Magento compiler"
    task :disable do
        on roles(:app) do |host|
            within release_path do
                execute "php -f #{current_path}/htdocs/shell/compiler.php -- disable"
            end
        end
    end
end